
  
<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
      {{#each cart.products}}
        <div class="col-md-10">
            <div class="row p-2 bg-white border rounded mt-2">
                <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src="https://i.imgur.com/QpjAiHq.jpg"></div>
                <div class="col-md-6 mt-1">
                    <h5>{{productId.title}}</h5>
                    <div class="d-flex flex-row">
                        <div class="ratings mr-2"><i class="fa fa-star"></i>Code <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div><span>{{productId.code}}</span>
                    </div>
                    <div class="mt-1 mb-1 spec-1"><span>Stock </span><span class="dot"></span><span>{{productId.stock}}</span><span class="dot"></span><span><br></span></div>
                    <div class="mt-1 mb-1 spec-1"><span>Category </span><span class="dot"></span><span>{{productId.category}}</span><span class="dot"></span><span><br></span></div>
                   
                    <h4 class="mr-1">Cantidad:</h4><span class="strike-text">{{this.qty}}</span> 
                </div>
                <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                    <div class="d-flex flex-row align-items-center">
                         
                        <h4 class="mr-1">${{this.price}}</h4><span class="strike-text">${{productId.price}}</span>
                    </div>
                   
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>